{
  "name": "@hdsydsvenskan/asset-versions",
  "version": "3.1.2-0",
  "license": "UNLICENSED",
  "description": "CLI and helper methods for our asset versions",
  "author": "HD-Sydsvenskan <webtech@hdsydsvenskan.se>",
  "homepage": "https://github.com/sydsvenskan/node-asset-versions",
  "repository": {
    "type": "git",
    "url": "git://github.com/sydsvenskan/node-asset-versions.git"
  },
  "scripts": {
    "build:css": "cp example/src/main.css example/dist/bare/main.css",
    "build:js": "webpack --mode='production' --devtool hidden-source-map  --config example/webpack.config.js --output-public-path /dist/rev/",
    "build": "run-p build:* && rm -rf example/dist/rev && node cli.js -p example",
    "check:dependency-check": "dependency-check *.js --no-dev -i @types/*",
    "check:eslint": "eslint .",
    "check:installed-check": "installed-check -i eslint",
    "check:tsc": "tsc",
    "start": "run-s build && node example/app.js",
    "test:example:manifest": "diff --ignore-all-space example/example-manifest.json example/dist/bare/manifest.json",
    "test:example:versions": "diff --ignore-all-space example/example-asset-versions.json example/asset-versions.json",
    "test:example": "run-s build && run-p test:example:*",
    "test:mocha": "NODE_ENV=test nyc --reporter=lcov --reporter text mocha --reporter dot test/**/*.spec.js",
    "test": "run-p check:* && run-p test:*"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "main": "index.js",
  "bin": {
    "asset-versions": "cli.js"
  },
  "devDependencies": {
    "@hdsydsvenskan/eslint-config-hds": "^20.0.1",
    "@hdsydsvenskan/eslint-config-hds-core": "^2.0.1",
    "@types/node": "^10.17.6",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "dependency-check": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^24.0.2",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^19.0.1",
    "html-escaper": "^3.0.0",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "installed-check": "^3.0.0",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "dependencies": {
    "@hdsydsvenskan/utils": "^4.19.0",
    "@types/verror": "^1.10.3",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "cp-file": "^9.0.0",
    "dashdash": "^1.14.0",
    "debug": "^4.1.1",
    "load-json-file": "^6.2.0",
    "pkg-dir": "^4.1.0",
    "rev-file": "^3.0.0",
    "verror": "^1.10.0",
    "write-json-file": "^4.2.1"
  }
}
